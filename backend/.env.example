# Stori Expense Tracker - Environment Configuration Example
# Copy this file to .env and update with your actual values

# ===============================================
# CORE APPLICATION SETTINGS
# ===============================================
APP_NAME=Stori Expense Tracker
APP_VERSION=1.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8000

# ===============================================
# SUPABASE CONFIGURATION (Required)
# ===============================================
# Create a Supabase project at https://supabase.com
# Copy your project URL and anon key from the project dashboard
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your_supabase_service_role_key_here

# ===============================================
# JWT AUTHENTICATION SETTINGS
# ===============================================
# Generate a secure secret key for JWT token signing
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ===============================================
# AI FINANCIAL ADVISOR CONFIGURATION
# ===============================================
# Primary LLM provider for financial advice
LLM_PROVIDER=openai
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000

# ===============================================
# LLM PROVIDER OPTIONS
# ===============================================

# --- OpenAI (Recommended for production) ---
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# --- Ollama (Local AI, good for development) ---
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_LLM_MODEL=llama3.2:3b

# --- Azure OpenAI (Enterprise option) ---
AZURE_OPENAI_API_KEY=your_azure_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_LLM_DEPLOYMENT_NAME=gpt-4o-mini

# --- AWS Bedrock (Enterprise option) ---
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0
AWS_REGION=us-east-1
# Option 1: Use AWS Profile
BEDROCK_PROFILE_NAME=your_aws_profile
# Option 2: Use AWS Access Keys
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# --- LM Studio (Local AI alternative) ---
LM_STUDIO_BASE_URL=http://localhost:1234
LM_STUDIO_API_KEY=lm-studio
LM_STUDIO_MODEL=liquid/lfm2-1.2b

# --- OpenRouter (Multiple models via API) ---
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# ===============================================
# FINANCIAL ADVICE SETTINGS
# ===============================================
# Default time period for financial analysis (days)
DEFAULT_ANALYSIS_PERIOD_DAYS=30
# Maximum conversation history to maintain for context
MAX_CONVERSATION_HISTORY=10
# Financial health score calculation settings
ENABLE_FINANCIAL_SCORING=true

# ===============================================
# DATABASE SETTINGS
# ===============================================
# Connection pool settings for Supabase
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# ===============================================
# SECURITY SETTINGS
# ===============================================
# CORS settings for frontend integration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*

# ===============================================
# LOGGING AND MONITORING
# ===============================================
LOG_LEVEL=INFO
ENABLE_API_LOGGING=true
ENABLE_SQL_LOGGING=false

# ===============================================
# DEVELOPMENT SETTINGS
# ===============================================
# Auto-reload on code changes (development only)
RELOAD=true
# API documentation access
ENABLE_DOCS=true
DOCS_URL=/docs
REDOC_URL=/redoc